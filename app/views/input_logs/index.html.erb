<%- model_class = InputLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:splunk_user_id) %></th>
      <th><%= model_class.human_attribute_name(:source_hostname) %></th>
      <th><%= model_class.human_attribute_name(:log_file_path) %></th>
      <th><%= model_class.human_attribute_name(:sourcetype) %></th>
      <th><%= model_class.human_attribute_name(:log_file_size) %></th>
      <th><%= model_class.human_attribute_name(:data_retention_period) %></th>
      <th><%= model_class.human_attribute_name(:memo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @input_logs.each do |input_log| %>
      <tr>
        <td><%= link_to input_log.id, input_log_path(input_log) %></td>
        <td><%= input_log.splunk_user_id %></td>
        <td><%= input_log.source_hostname %></td>
        <td><%= input_log.log_file_path %></td>
        <td><%= input_log.sourcetype %></td>
        <td><%= input_log.log_file_size %></td>
        <td><%= input_log.data_retention_period %></td>
        <td><%= input_log.memo %></td>
        <td><%=l input_log.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_input_log_path(input_log), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      input_log_path(input_log),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_input_log_path,
            :class => 'btn btn-primary' %>

<%- model_class = SplunkUser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_name) %>:</strong></dt>
  <dd><%= @splunk_user.user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_name) %>:</strong></dt>
  <dd><%= @splunk_user.group_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:app_team_name) %>:</strong></dt>
  <dd><%= @splunk_user.app_team_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serviceid) %>:</strong></dt>
  <dd><%= @splunk_user.serviceid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rpaas_user_name) %>:</strong></dt>
  <dd><%= @splunk_user.rpaas_user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:memo) %>:</strong></dt>
  <dd><%= @splunk_user.memo %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              "/", :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_splunk_user_path(@splunk_user), :class => 'btn' , :style => "display: none;"%>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              splunk_user_path(@splunk_user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger', :style => "display: none;" %>
</div>
